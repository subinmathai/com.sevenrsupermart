<suite name="testcases" thread-count="5" parallel="tests">
	<listeners>
		<listener  class-name="com.sevenrmartsupermarket.listeners.ExtendReporter"></listener>
	</listeners>
	<test name="runningInChrome">
		<parameters>
			<parameter name="browser" value="Chrome"></parameter>
		</parameters>
		<classes>
			<class name="com.sevenrmartsupermarket.tests.LoginTest"> </class>
			<class name="com.sevenrmartsupermarket.tests.HomeTest"></class>
		</classes>
	</test>


	<test name="runningInEdge">
		<parameters>
			<parameter name="browser" value="Edge"></parameter>
		</parameters>
		<classes>
			<class name="com.sevenrmartsupermarket.tests.LoginTest"> </class>
			<class name="com.sevenrmartsupermarket.tests.HomeTest"></class>

		</classes>
	</test>

	<test name="runningInFireFox">
		<parameters>
			<parameter name="browser" value="Firefox"></parameter>
		</parameters>
		<classes>
			<class name="com.sevenrmartsupermarket.tests.LoginTest"> </class>
			<class name="com.sevenrmartsupermarket.tests.HomeTest"></class>
		</classes>
	</test>
</suite>